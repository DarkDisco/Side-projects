var addR;
var addI;
var multiR;
var multiI;

function complexAddMulti (a,b,c,d,e) {
  // function returns the addition of two complex numbers if e is equal to 0 or the multiplication if e = 1.

  if (e == 0) {
    addR = a + c;
    addI = b + d;
    //console.log(addR + addI) 
    return addR +','+ 'i'+ addI
  }
  
  if (e = 1) {
    multiR = (a * c) - (b * d);
    multiI = (a * d) + (c * b);
    return multiR + ',' + 'i' + multiI;
  }
   
}
console.log(complexAddMulti(4,3,2,5,1))
